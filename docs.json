{
  "$schema": "https://mintlify.com/schema.json",
  "theme": "mint",
  "name": "The Savants Voice API",
  "colors": {
    "primary": "#3B82F6",
    "light": "#60A5FA",
    "dark": "#1D4ED8"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "README",
              "getting-started",
              "authentication"
            ]
          },
          {
            "group": "Implementation",
            "pages": [
              "websocket-connection",
              "flutter-implementation",
              "troubleshooting"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "API Documentation",
            "pages": [
              "api-reference/overview",
              "api-reference/authentication-endpoint"
            ]
          },
          {
            "group": "WebSocket API",
            "pages": [
              "api-reference/websocket-connection",
              "api-reference/message-types",
              "api-reference/audio-format"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Documentation",
          "href": "https://thesavants.mintlify.app",
          "icon": "book-open-cover"
        },
        {
          "anchor": "Website",
          "href": "https://thesavants.ai",
          "icon": "globe"
        },
        {
          "anchor": "Support",
          "href": "mailto:support@thesavants.ai",
          "icon": "envelope"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@thesavants.ai"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://dashboard.thesavants.ai"
    }
  },
  "footer": {
    "socials": {
      "github": "https://github.com/savantcaleb",
      "linkedin": "https://linkedin.com/company/thesavants"
    }
  }
